<!-- Information used to filter HTML content for display purposes  -->
<!-- This file contains a list of acceptable html element name, and associated attribute names -->
<!-- All element and attribute names except the ones specified here will be filtered out -->
<filter_info>
	<elements>
	  <element>
	    <name>b</name>
	  </element>
      <element>
        <name>i</name>
      </element>      
	  <element>
	    <name>u</name>
	  </element>
	  <element>
	    <name>strike</name>
	  </element>
	  <element>
	    <name>h1</name>
	  </element>
	  <element>
	    <name>h2</name>
	  </element>
	  <element>
	    <name>h3</name>
	  </element>
	  <element>
	    <name>br</name>
	  </element>
	  <element>
	    <name>ul</name>
	  </element>
	  <element>
	    <name>ol</name>
	  </element>
	  <element>
	    <name>li</name>
	  </element>
	  <element>
	    <name>pre</name>
	  </element>
	  <element>
	    <name>p</name>
	  </element>
	  <element>
	    <name>blockquote</name>
	  </element>
	  <element>
	    <name>font</name>
	    <attributes>
	      <attribute>color</attribute>
	      <attribute>face</attribute>
	      <attribute>size</attribute>
	    </attributes>
	  </element>
	  <element>
	    <name>span</name>
	    <attributes>
	      <attribute>style</attribute>
	    </attributes>
	  </element>
	  <element>
	    <name>div</name>
	    <attributes>
	      <attribute>align</attribute>
	    </attributes>
	  </element>
	  <element>
	    <name>img</name>
	    <attributes>
	      <attribute>alt</attribute>
	      <attribute>src</attribute>
	    </attributes>
	  </element>
	  <element>
	    <name>a</name>
	    <attributes>
	      <attribute>href</attribute>
	      <attribute>target</attribute>
	    </attributes>
	  </element>
	</elements>
    <!-- If one of the values specified in the following filters is found within an allowed attribute, the attribute will be removed. -->
	<attr_content_filters>
	    <filter>javascript:</filter>
	</attr_content_filters>
</filter_info>
